<h1>Sign Up!</h1>

<%= form_for @user, html: { class: "form" } do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <% if flash[:errors] %>
    <ol class="messages">
      <% flash[:errors].each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ol>
  <% end %>
  
  <%= f.submit %>
<% end %>