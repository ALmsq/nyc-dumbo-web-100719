<!DOCTYPE html>
<html class="snowy">
  <head>
    <title>FakeHolidayApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Press+Start+2P&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="menu">
      <div class="container">
        <nav>
          <%= link_to "Holidays", holidays_path, class: "item" %>
          <%= link_to "New Party", new_party_path, class: "item" %>
        </nav>
        <nav class="right">
          <span class="item">
            <% if @current_user %>
              Welcome, <%= @current_user.username %>!
              <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
            <% else %>
              <%= link_to "Signup", signup_path, class: "item" %>
              <%= link_to "Login", login_path, class: "item" %>
            <% end %>
          </span>
        </nav>
      </div>
    </header>
    <div class="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
