<%= form_for @holiday, html: { class: "form" } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :gifts_needed %>
  <%= f.check_box :gifts_needed %>
  
  <%= f.submit %>
<% end %>